<%= form_with model: task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  <%= f.label :details %>
  <%= f.text_field :details, class: 'form-control' %>
  <%= f.label :completed, class: "" %>
  <%= f.check_box :completed, data: {completed: @task.completed }, class: "" %>
  <%= f.submit 'Submit', class: 'btn btn-primary mt-3' %>
<% end %>